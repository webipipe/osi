<!-- res/drawable/custom_spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con sombra -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="#F5F5F5"/> <!-- Color de fondo más suave (gris claro) -->
            <corners android:radius="12dp"/> <!-- Bordes más redondeados -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Borde gris suave -->
        </shape>
    </item>

    <!-- Borde de selección o enfoque -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Sin fondo en el borde activo -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#4CAF50"/> <!-- Borde verde cuando seleccionado o enfocado -->
        </shape>
    </item>
</layer-list>
