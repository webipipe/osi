<!-- res/drawable/custom_edittext_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="#F5F5F5"/> <!-- Color de fondo más suave (gris claro) -->
            <corners android:radius="12dp"/> <!-- Bordes redondeados más suaves -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Borde gris suave -->
        </shape>
    </item>
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#4CAF50"/> <!-- Color de borde activo (verde) -->
        </shape>
    </item>
</layer-list>
